<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.WatchRecipeStepsFragment">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

  <TextView
      android:id="@+id/full_description"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      />


</LinearLayout>

    <Button
        android:id="@+id/exo_next_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blackYellow"
        android:drawableRight="@drawable/ic_play_arrow_black_24dp"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/offWhite"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/exo_prev_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blackYellow"
        android:text="Previous"
        android:layout_alignParentBottom="true"
        android:textColor="@color/offWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>